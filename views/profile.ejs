<%- include ('./partials/header.ejs') -%> 
    <div class="container">
        <nav class="navbar">
            <a href="/" class="option">My Note's</a>
            <div class="options">
                <a href="/user/session" class="option"><%= user.username %> </a>
                <a href="/notes/allNotes" class="option">All Notes</a>
                <a href="/user/logout" class="option">Logout</a>
            </div>
    </nav>
    <main class="main">
        <h3>Welcome to My Note's</h3>
        <form action="/notes/createNote/<%= user.id %>" method="post" class="form">
            <h3>Create a note</h3>
            <br>
            <label for="title">Title</label>
            <input type="text" name="title" id="title" placeholder="My note!!!" autofocus>
            <label for="description">Description</label>
            <textarea name="description" id="description" cols="30" rows="10"></textarea>
            <button type="submit" class="btn btn-login">Save</button>
        </form>

        <% if (message) { %>
            <p><%= message %></p>
        <% } %>
    </main>
    </div>
<%- include ('./partials/footer.ejs') -%> 